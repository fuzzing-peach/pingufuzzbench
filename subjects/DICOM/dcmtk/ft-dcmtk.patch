+void asan_report_callback(const char* report) {
+    pid_t pid = getpid();
+    char pid_str[32], file_path[512];
+    snprintf(pid_str, sizeof(pid_str), "%d", pid);
+    
+    char *env_path = getenv(ASAN_REPORT_PATH_ENV);
+    if (!env_path || !env_path[0]) return;
+    
+    strcpy(file_path, env_path);
+    size_t len = strlen(file_path);
+    if (len > 0 && file_path[len-1] != '/') strcat(file_path, "/");
+    strcat(file_path, pid_str);
+    strcat(file_path, "-asan-rt.txt");
+    
+    FILE *fp = fopen(file_path, "a");
+    if (!fp) return;
+    
+    time_t now = time(NULL);
+    fprintf(fp, "\n========== ASAN Report ==========\n");
+    fprintf(fp, "Time: %s", ctime(&now));
+    fprintf(fp, "PID: %d\n", pid);
+    fprintf(fp, "Report:\n%s", report);
+    fprintf(fp, "==================================\n");
+    fclose(fp);
+}
+
+int init_asan_report_hook(void) {
+    char *env_path = getenv(ASAN_REPORT_PATH_ENV);
+    if (env_path && env_path[0]) {
